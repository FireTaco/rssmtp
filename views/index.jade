extends layout

block content
  h1 rss-email-gw

  form.new.feed(action="/", method="post")
    != csrf_form_tag()
    input(name="url", type="url", placeholder="Enter feed url", required)
    button(type="submit") Add new feed

    ol.feed.list
      - for feed in feeds
        li.feed.item
          .item-title= feed.name
