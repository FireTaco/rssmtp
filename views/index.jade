extends layout

block content
  form.new.feed(action="/", method="post")
    != csrf_form_tag()
    input.grid_9(name="url", type="url", placeholder="Enter feed url", required)
    button.button.grid_3(type="submit") Add new feed

    .clear

    ol.feed.list
      - for feed in feeds
        li.feed.item
          .item-title
            a.manage-feed(href="/feed/#{feed.id}")= feed.name

            if isDev
              span  /
              a(href="/feed/#{feed.id}/refetch")  refetch
